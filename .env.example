# StreamVault Environment Variables

# Cloudflare Account
CF_ACCOUNT_ID=your-cloudflare-account-id
CF_API_TOKEN=your-cloudflare-api-token

# Cloudflare R2
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET=streamvault-videos
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Cloudflare D1
D1_DATABASE_ID=your-d1-database-id

# Authentication
JWT_SECRET=your-very-secret-jwt-key-change-this

# Application
APP_URL=http://localhost:3000
WORKER_URL=http://localhost:8787

# Crypto Payments (e.g., NOWPayments, CoinGate, or BTCPay Server)
CRYPTO_PAYMENT_API_KEY=your-crypto-payment-api-key
CRYPTO_PAYMENT_PUBLIC_KEY=your-crypto-payment-public-key
CRYPTO_WEBHOOK_SECRET=your-crypto-webhook-secret
